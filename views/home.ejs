<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach( item =>{ %>
  <h1><%=item.postTitle %></h1>
  <% if(item.postBody.length > 100){ %>
    <p><%= item.postBody.substring(0,100) + " ..." %> <a href="/post/<%=item._id%>">Read More </a></p>
    <% } else{ %>
    <p><%=  item.postBody %> <a href="/post/<%=item._id%>">Read More</a></p>  
    <% } %>
  
<% }) %>



