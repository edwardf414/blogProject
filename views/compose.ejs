<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="blogTitle">Title</label>
    <input class="form-control" type="text" name="blogTitle" />
  </div>
  <div class="form-group">
    <label for="blogInput">Post</label>
    <textarea class="form-control" name="blogInput" rows="5" aria-label="With textarea"></textarea>
  </div>

  <div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </div>
  
</form>

